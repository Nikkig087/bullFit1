
    document.addEventListener('DOMContentLoaded', function () {
        // Add event listener for all delete buttons
        document.querySelectorAll('.btn-delete').forEach(button => {
            button.addEventListener('click', function () {
                const commentId = this.getAttribute('data-comment_id');
                const exercisePk = this.getAttribute('data-exercise_pk'); // You may need to pass the exercise PK
    
                // Set the action URL of the delete form in the modal
                const deleteForm = document.querySelector('#deleteForm');
                deleteForm.action = `/exercise/${exercisePk}/comment/delete/${commentId}/`;
            });
        });
    });